{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@mx/core": ["../../packages/core/"]
    }
  },
  "include": ["src", "../../packages/core"],
  "exclude": ["node_modules", "dist"]
}
